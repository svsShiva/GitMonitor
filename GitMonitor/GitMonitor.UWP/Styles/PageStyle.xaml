 <ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls">

    <Color x:Key="SystemAccentColor">transparent</Color>

    <Style x:Name="dgCellStyle" TargetType="controls:DataGridCell">
    <Setter Property="MaxWidth" Value="200"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontFamily" Value="Segoe UI"/>
    <Setter Property="FontWeight" Value="SemiLight"></Setter>
    <Setter Property="Padding" Value="0.5"></Setter>
    </Style>

    <Style x:Name="dgStyle" TargetType="controls:DataGrid">
        <Setter Property="AlternatingRowBackground" Value="AliceBlue" />
        <Setter Property="AutoGenerateColumns" Value="False" />
        <Setter Property="CellStyle" Value="{StaticResource dgCellStyle}"/>
        <Setter Property="CanUserReorderColumns" Value="False"/>
        <Setter Property="CanUserSortColumns" Value="False"/>
        <Setter Property="CanUserResizeColumns" Value="False"/>
        <Setter Property="BorderBrush" Value="Silver"></Setter>
        <Setter Property="BorderThickness" Value="1,1,1,0"></Setter>
        <Setter Property="GridLinesVisibility" Value="All"></Setter>
    </Style>
</ResourceDictionary>
