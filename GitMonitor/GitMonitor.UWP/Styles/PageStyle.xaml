 <ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls">

    <Color x:Key="SystemAccentColor">transparent</Color>

    <Style x:Name="dgCellStyle" TargetType="controls:DataGridCell">
        <Setter Property="MaxWidth" Value="350"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>

    <Style x:Name="dgStyle" TargetType="controls:DataGrid">
        <Setter Property="AlternatingRowBackground" Value="AliceBlue" />
        <Setter Property="AutoGenerateColumns" Value="False" />
        <Setter Property="CellStyle" Value="{StaticResource dgCellStyle}"/>
        <Setter Property="CanUserReorderColumns" Value="False"/>
        <Setter Property="CanUserSortColumns" Value="False"/>
        <Setter Property="CanUserResizeColumns" Value="False"/>
    </Style>
</ResourceDictionary>
