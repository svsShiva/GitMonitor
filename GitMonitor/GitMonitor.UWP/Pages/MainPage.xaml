<Page
    x:Class="GitMonitor.UWP.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <StackPanel Orientation="Horizontal" x:Name="AppTitleBar" Background="Transparent" Height="35">
            <AppBarButton Icon="MoveToFolder" Style="{StaticResource abbtnStyle}"/>
            <TextBlock Text="GitMonitor" VerticalAlignment="Center"></TextBlock>
        </StackPanel>

        <NavigationView x:Name="nvMainView" PaneDisplayMode="Top"
                        ItemInvoked="nvMainView_ItemInvoked" 
                        IsBackButtonVisible="Collapsed"
                        Loaded="nvMainView_Loaded">

            <NavigationView.MenuItems>
                <NavigationViewItem Icon="ProtectedDocument" Content="Dashboard" Tag="Dashboard" />
                <NavigationViewItem Icon="Document" Content="UntrackedRepos" Tag="UntrackedRepos"/>
                <NavigationViewItem Icon="AddFriend" Content="EmailGroups" Tag="EmailGroups"/>
            </NavigationView.MenuItems>

            <Frame x:Name="cfMainFrame" Padding="3,5,3,3">
            </Frame>
        </NavigationView>
    </StackPanel>

</Page>
