<ContentDialog
    x:Class="GitMonitor.UWP.Pages.Dialogs.BranchesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Title="Branches"
    PrimaryButtonText="Close"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <controls:DataGrid x:Name="dgBranches" Style="{StaticResource dgStyle}">
        <controls:DataGrid.Columns>

            <controls:DataGridTextColumn Header="Branch Name" IsReadOnly="True"
                                                 Binding="{Binding Name}"/>

            <controls:DataGridTextColumn Header="AheadBy" IsReadOnly="True"
                                             Binding="{Binding AheadBy}" />

            <controls:DataGridTextColumn Header="BehindBy" IsReadOnly="True"
                                             Binding="{Binding BehindBy}" />

        </controls:DataGrid.Columns>
    </controls:DataGrid>
</ContentDialog>
